<p id="notice"><%= notice %></p>

<h1>Profile Roles</h1>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile_roles.each do |profile_role| %>
      <tr>
        <td><%= profile_role.role %></td>
        <td><%= link_to 'Show', profile_role %></td>
        <td><%= link_to 'Edit', edit_profile_role_path(profile_role) %></td>
        <td><%= link_to 'Destroy', profile_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

