<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= Profile.find(group.profile_id).name %></td>
        <td><%= link_to 'Show', profile_group_path(current_profile,group) %></td>
        <td><%= link_to 'Edit', edit_profile_group_path(current_profile, group) %></td>
        <td><%= link_to 'Destroy', profile_group_path(current_profile,group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_profile_group_path  %>
