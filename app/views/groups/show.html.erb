<div class="container">
  <p>
    <strong>Name:</strong>
    <%= @group.name %>
  </p>

  <p>
    <strong>Profile:</strong>
    <%= @group.profiles.name %>
  </p>
</div>
<div class="container">
  <h3>All students in this group</h3>

  <% @students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.username %></td>
      <td><%= link_to 'Show Profile', profile_path(student) %></td>
    </tr>
  <% end %>

</div>


<td><%= link_to 'Edit', edit_profile_group_path(current_profile, @group) %></td>
